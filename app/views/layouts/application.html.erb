<!DOCTYPE html>
<html>
<head>
  <title>Healthblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sidebar">
    <div id="logo">

      <%= image_tag "/images/globe_logo.jpeg" %>

    </div>
      
      <ul class="category">
        <li >Website</li>
        <li><%= link_to "Blog", root_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li>Social</li>
        <li><a href="https://twitter.com/walkervirtual">Twitter</a></li>
        <li><a href="https://github.com/walkervirtual">Github</a></li>
        <li><a href="mailto:damionrwalker@gmail.com">Email</a></li>
      </ul>

        <% if !user_signed_in? %>
        <p class="sign_in">Admin Login</p>
        <% end %>
      </div>

      <div id="main_content">
        <div id="header">
          <% if current_page?(root_path) %>
          <p>All Posts</p>
          <% elsif current_page?(about_path) %>
          <p>About</p>
          <% else %>
            <% link_to "Back to All Posts", root_path %>
            <% end %>
     
      <% if user_signed_in? %>
        <div class="buttons">
          <button class="button"><%= link_to "New Post", new_post_path, method: :get %>
          </button>
          <button class="button"><%= link_to "Log Out", destroy_user_session_path, method: :delete %> </button>            

        </div>
       <% else %>
        
          <button class="button"><%= link_to "Sign in", user_session_path, method: :post %>
          </button>
          <!-- <button class="button"><%= link_to "Log Out", destroy_user_session_path, method: :delete %> </button>
                       -->


       <% end %>
      </div>
    <div>  
      <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert") %>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
